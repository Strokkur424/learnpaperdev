---
const { src, muted = true } = Astro.props;
---

{
  muted == true ? (
    <video width="100%" muted loop controls={true}>
      <source src={src} type="video/mp4" /> Your device does not support video
      playback.
    </video>
  ) : (
    <video width="100%" loop controls={true}>
      <source src={src} type="video/mp4" /> Your device does not support video
      playback.
    </video>
  )
}
